<?xml version='1.0' encoding="UTF-8"?>
<configuration>
    <property name="LOGS" value="./logs"/>

    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %green(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%C{1}): %msg%n%throwable
            </Pattern>
        </layout>
    </appender>

    <!-- FILE LOGS APPENDER FOR TEST ENVIRONMENT-->
    <appender name="RollingFileTest"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/application-test-logger.log</file>
        <encoder
                class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d %p %C{1} [%t] %m%n</Pattern>
        </encoder>

        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily and when the file reaches 10 MegaBytes -->
            <fileNamePattern>${LOGS}/archived/application-test-logger-%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>


    <!-- FILE LOGS APPENDER FOR PROD-->


    <appender name="RollingFileProd"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/application-prod-logger.log</file>
        <encoder
                class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d %p %C{1} [%t] %m%n</Pattern>
        </encoder>

        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily and when the file reaches 10 MegaBytes -->
            <fileNamePattern>${LOGS}/archived/application-prod-logger-%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>


    <!-- LOG everything at INFO level -->


    <!-- LOG "com.baeldung*" at TRACE level -->
    <!--    <logger name="com.kaamDekho" level="info" additivity="false">-->
    <!--        <appender-ref ref="RollingFile" />-->
    <!--        <appender-ref ref="Console" />-->
    <!--    </logger>-->


    <springProfile name="test">
        <root level="info">
            <appender-ref ref="RollingFileTest"/>
            <appender-ref ref="Console"/>
        </root>
    </springProfile>

    <springProfile name="prod">
        <root level="info">
            <appender-ref ref="RollingFileProd"/>
            <appender-ref ref="Console"/>
        </root>
    </springProfile>


</configuration>
